<div class="center">
	<h1>The Paintings</h1>
</div>
<% if @paintings.any? %>
	<% @paintings.each do |painting| %>
	<ul style="list-style-type: none;" class="center">
		<li>Title: <%= link_to "#{painting.name_of_painting}", painting %></li>
		<li><%= link_to image_tag(painting.avatar_url(:thumb).to_s), painting %></li>
		
		<li>Artist: <%= link_to "#{painting.artist.first_name} #{painting.artist.last_name}", artist_path(painting.artist) %> | Price: $<%= painting.price %></li>
		<li>Email: <%= painting.artist.email %> | Phone: <%= painting.artist.phone %></p></li> 	
	</ul>
	<% end %>
<% end %>
<% if current_user %>	
	<%= link_to "Submit your art", new_painting_path %>
<% end %>