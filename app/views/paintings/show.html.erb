<div class="row">
	<div class="col m6 wow fadeInLeft">
		<h1><%= image_tag(@painting.avatar_url)  %></h1>
	</div>
	<div class="row center">
		<div class="col s12 m6">
			<div class="card blue-grey darken-1 wow fadeInRight">
				<div class="card-content white-text">
					<span class="card-title">Description</span>
	           	 	<p><%= @painting.description %></p>
	        	</div>
	    	</div>
	 	</div>
	</div>
</div>

<% if  current_user %>	
	<%= link_to "Edit Painting", edit_painting_path(@painting) %>
